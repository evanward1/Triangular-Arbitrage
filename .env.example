# Exchange API Configuration
# Copy this to .env and add your real API keys

# Kraken API Keys
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_SECRET=your_kraken_secret_here

# Binance API Keys
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_here

# Coinbase Pro API Keys
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET=your_coinbase_secret_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here

# Trading Configuration
TRADING_MODE=live  # 'paper' for simulation, 'live' for real trading
MAX_POSITION_SIZE=1000  # Maximum USD per trade
MIN_PROFIT_THRESHOLD=0.5  # Minimum profit % to execute trade
